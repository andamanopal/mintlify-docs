{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Alto CERO 2.0 Documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "ignorePatterns": ["alto-cero-infra/**", "node_modules/**", ".git/**"],
  "navigation": {
    "tabs": [
      {
        "tab": "User Guide",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "index",
              "getting-started/quickstart",
              "getting-started/key-concepts",
              "getting-started/demo-environment"
            ]
          },
          {
            "group": "Architecture",
            "pages": [
              "architecture/overview",
              "architecture/data-flow",
              "architecture/security",
              "architecture/scalability"
            ]
          },
          {
            "group": "Components",
            "pages": [
              "components/overview"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "configuration/overview"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub Repository",
          "href": "https://github.com/AltotechTH/alto-cero-infra",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@altotech.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dash.altotech.ai"
    }
  },
  "footer": {
    "socials": {
      "linkedin": "https://linkedin.com/company/altotech"
    }
  }
}